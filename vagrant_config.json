{
  "vm_box":"opscode-ubuntu-1204",
  "vm_box_url":"https://opscode-vm-bento.s3.amazonaws.com/vagrant/opscode_ubuntu-12.04-i386_chef-11.4.4.box",
  "vm_forward_agent":true,
  "vm_forwarded_ports":[
    {
      "guest":8000,
      "host":8000
    }
  ],
  "vm_synced_folders":[
    {
      "host":"./workspace",
      "guest":"/home/vagrant/workspace",
      "mount_options":[
        "dmode=777",
        "fmode=777"
      ]
    },
    {
      "host":"./home/.virtualenvs",
      "guest":"/home/vagrant/.virtualenvs"
    },
    {
      "host":"./home/.ssh",
      "guest":"/home/vagrant/.ssh",
      "mount_options":[
        "dmode=775",
        "fmode=600"
      ]
    }
  ],
  "chef_log_level":"info", //one of debug, info, warn, error, fatal. Default: info
  "chef_cookbooks":[
    "vendor-cookbooks",
    "main-cookbooks"
  ],
  "chef_role":"roles",
  "chef_bags_path":"data_bags",
  "chef_recipes":[
    "apt",
    "vim",
    "git",
    "teracy-dev"
  ],
  "chef_json":{
    "teracy-dev":{
      "workspace":[
        "/vagrant/workspace/readonly",
        "/vagrant/workspace/personal"
      ],
      "git":{
        "user":{
          "name":"Teracy Dev",
          "email":"teracy-dev@teracy.com"
        },
        "color":true,
        "commit":{
          "template":true
        },
        "diff":{
          "tool":"vimdiff"
        },
        "merge":{
          "tool":"vimdiff"
        },
        "difftool":{
          "prompt":false
        }
      },
      "nodejs":{
        "enabled":true,
        "npm":[
          "grunt-cli",
          "bower"
        ]
      },
      "python":{
        "enabled":true,
        "pip":{
          "global":{

          }
        }
      },
      "ruby":{
        "enabled":false
      },
      "php":{
        "enabled":false
      },
      "java":{
        "enabled":false,
        "version":"7",
        "flavor":"openjdk",
        "maven":{
          "enabled":false,
          "version":"3"
        }
      },
      "gettext":false
    }
  }
}
